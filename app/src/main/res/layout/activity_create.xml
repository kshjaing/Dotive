<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E2A2A"
    android:id="@+id/cl">

    <EditText
        android:id="@+id/edtHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:minHeight="45dp"
        android:background="@drawable/edt_border_round"
        android:ems="18"
        android:paddingLeft="12dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:inputType="text"
        android:textSize="19sp"
        android:fontFamily="@font/katuri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:minHeight="45dp"
        android:text="추가"
        android:textSize="18sp"
        android:background="@drawable/button_border_round"
        android:fontFamily="@font/katuri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtHabit" />
</androidx.constraintlayout.widget.ConstraintLayout>