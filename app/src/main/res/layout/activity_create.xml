<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:background="@drawable/edt_border_round"
        android:ems="18"
        android:fontFamily="@font/katuri"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHabit" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="161dp"
        android:layout_marginRight="161dp"
        android:layout_marginBottom="222dp"
        android:background="@drawable/button_border_round"
        android:fontFamily="@font/katuri"
        android:minHeight="45dp"
        android:text="추가"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncolorBlue" />

    <ImageButton
        android:id="@+id/btncolorPurple"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/colorbutton_purple"
        app:layout_constraintStart_toEndOf="@+id/btncolorBlue"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <ImageButton
        android:id="@+id/btncolorOrange"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/colorbutton_orange"
        app:layout_constraintStart_toEndOf="@+id/btncolorRed"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <ImageButton
        android:id="@+id/btncolorGreen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/colorbutton_green"
        app:layout_constraintStart_toEndOf="@+id/btncolorOrange"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <ImageButton
        android:id="@+id/btncolorBluegray"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/colorbutton_bluegray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btncolorPurple"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <ImageButton
        android:id="@+id/btncolorRed"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/colorbutton_red_pressed"
        app:layout_constraintEnd_toStartOf="@+id/btncolorOrange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <ImageButton
        android:id="@+id/btncolorBlue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/colorbutton_blue"
        app:layout_constraintStart_toEndOf="@+id/btncolorGreen"
        app:layout_constraintTop_toBottomOf="@+id/edtObjDays" />

    <TextView
        android:id="@+id/txtObjdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/katuri"
        android:text="일동안 하겠습니다!"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/edtObjDays"
        app:layout_constraintTop_toBottomOf="@+id/edtHabit" />

    <EditText
        android:id="@+id/edtObjDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_border_round"
        android:ems="2"
        android:fontFamily="@font/katuri"
        android:hint="1"
        android:inputType="number"
        android:minHeight="45dp"
        android:paddingLeft="12dp"
        android:paddingRight="3dp"
        android:textAlignment="viewEnd"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtHabit" />

    <TextView
        android:id="@+id/txtHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/katuri"
        android:text="어떤 습관을 만드실건가요?"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>