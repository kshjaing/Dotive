<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">

        <shape>
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
            <!-- <solid android:color="@android:color/holo_green_light" />-->
            <solid android:color="@color/Habit_Color" />
            <!-- <stroke android:color="@android:color/holo_green_dark"
                android:width="4dp"/>-->
            <corners android:radius="70dp" />
        </shape>
    </item>
</selector>

<!-- padding 태그 == 버튼의 패딩 -->
<!-- solid 태그 == 버튼의 색상 -->
<!-- stroke 태그 == 버튼의 테두리 -->
<!-- corners 태그 == 모서리를 둥글게 하는 정도 (이걸 이용하여 점선 테두리 등을 구현),
(또는 원하는 모서리만 둥글게 표현 가능)-->